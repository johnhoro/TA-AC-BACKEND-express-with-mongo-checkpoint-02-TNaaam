<%- include('partials/header') -%> <%- include('partials/navbar') -%>
<div class="body">
  <div class="container">
    <div class="form-control new-event">
      <form action="/events" method="POST">
        <input
          type="text"
          name="title"
          id="title"
          placeholder="Enter Title"
          required
        />
        <textarea
          name="summary"
          id="summary"
          cols="30"
          rows="10"
          placeholder="Enter Summary"
        ></textarea>
        <input
          type="text"
          name="host"
          id="host"
          placeholder="Enter Host"
          required
        />
        <label for="start_date"
          >Start Date
          <input type="date" name="start_date" id="start_date" />
        </label>
        <label for="end_date"
          >End Date
          <input type="date" name="end_date" id="end_start" />
        </label>
        <% categories.forEach(category => { %>
        <span
          ><%= category.name %><input
            class="check-box"
            type="checkbox"
            name="category"
            value="<%= category._id %>"
            id="<%= category._id %>"
        /></span>
        <% }) %>
        <input
          type="text"
          name="location"
          id="location"
          placeholder="Enter Event Location"
          required
        />
        <input type="submit" value="Add Event" />
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
